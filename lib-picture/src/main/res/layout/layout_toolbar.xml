<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@color/colorPri"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="?android:attr/actionBarSize"
        android:layout_height="?android:attr/actionBarSize"
        android:scaleType="centerInside"
        android:src="@drawable/ic_gf_back" />

    <View
        android:layout_width="1px"
        android:layout_height="20dp"
        android:background="#535252" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:textColor="@drawable/selector_text_color_white" />

    <TextView
        android:id="@+id/tv_complete_count"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="10dp"
        android:background="@drawable/selector_btn_bg_green"
        android:enabled="false"
        android:gravity="center"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="完成"
        android:textColor="@drawable/selector_text_color_white"
        android:textSize="14sp" />
</LinearLayout>
